doctype html
html
  head
    title Aprender+ - Sistema de Gestión
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="stylesheets/style.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    header.bg-primary.text-white.p-3
      h1.mb-0 Aprender+ - Centro de Formación

    .container-fluid
      .row
        if usuario
          // Sidebar
          .col-md-3.bg-light.p-3
            nav
              h5 Menú
              ul.nav.flex-column
                li.nav-item
                  a.nav-link(href="/") Inicio
                li.nav-item
                  a.nav-link(href="/alumnos") Alumnos
                li.nav-item
                  a.nav-link(href="/courses") Cursos
                li.nav-item
                  a.nav-link(href="/profesores") Profesores
                li.nav-item
                  a.nav-link(href="/logout") Cerrar sesión

          // Contenido principal
          .col-md-9.p-4
            block content
        else
          // Solo contenido (sin sidebar)
          .col-12.p-4
            block content

    footer.bg-dark.text-white.text-center.p-3.mt-4
      p © #{new Date().getFullYear()} Aprender+

