extends layout

block content
  h2 Editar Profesor

  form(action=`/profesores/${profesor.id}?_method=PUT`, method="POST")
    div
      label Nombre:
      input(type="text", name="nombre", value=profesor.nombre, required)
    div
      label Apellido:
      input(type="text", name="apellido", value=profesor.apellido, required)
    div
      label Email:
      input(type="email", name="email", value=profesor.email, required)
    div
      label Tel√©fono:
      input(type="text", name="telefono", value=profesor.telefono, required)
    div
      label CUIT:
      input(type="text", name="cuit", value=profesor.cuit, required)
    button(type="submit") Guardar cambios
