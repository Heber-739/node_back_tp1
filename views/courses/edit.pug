extends ../layout

block content
    form(action=`/courses/${course._id}?_method=PUT` method="POST" class="container mt-5")
        .card.shadow
          .card-body
            h2.mb-4 Editar Curso

            .mb-3
              label(for="profesor" class="form-label") Profesor
              select#profesor.form-select(name="profesor" required)
                each prof in profesores
                  option(
                    value=prof._id
                    selected=(String(prof._id) === String(course.profesor) ? true : false)
                  ) #{prof.apellido} #{prof.nombre}

            .mb-3
              label(for="nombre" class="form-label") Nombre del curso:
              input#nombre.form-control(type="text" value=course.nombre name="nombre" required)

            .mb-3
              label(for="horario" class="form-label") Horario:
              input#horario.form-control(type="text" value=course.horario name="horario" required)

            .mb-3
              label(for="cupo" class="form-label") Cupo:
              input#cupo.form-control(type="number" value=course.cupo name="cupo" min="1" required)

            .mb-3
              label(for="area" class="form-label") √Årea:
              input#area.form-control(type="text" value=course.area name="area" required)

            .mb-3
              label(for="estado" class="form-label") Estado:
              select#estado.form-select(value=course.estado name="estado" required)
                option(value="activa") Activa
                option(value="inactiva") Inactiva

            .text-center
              button.btn.btn-primary(type="submit") Guardar